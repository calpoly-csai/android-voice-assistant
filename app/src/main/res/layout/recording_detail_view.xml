<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="recording_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordingName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <SeekBar
            android:layout_width="207dp"
            android:layout_height="22dp"
            android:id="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/recordingName" android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/button3" android:layout_marginStart="16dp"
    />
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/recordingName" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>