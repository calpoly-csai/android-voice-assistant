<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context=".MainActivity"
                                             tools:layout_editor_absoluteY="56dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/speaker_last_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/speaker_first_name"
            android:hint="Speaker's First Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/speaker_first_name" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/speaker_last_name" android:hint="Speaker's Last Name"/>
    <Switch
            android:text="ISS or US"
            android:layout_width="186dp"
            android:layout_height="34dp"
            android:id="@+id/iss_or_us" android:showText="true"
            android:checked="false" android:textOn="ISS" android:textOff="US"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/speaker_last_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect|text"
            android:ems="10"
            android:id="@+id/description" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/iss_or_us" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:hint="Description"/>
</android.support.constraint.ConstraintLayout>